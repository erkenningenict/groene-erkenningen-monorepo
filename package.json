{
  "name": "monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:api": "cd apps/api && bun --watch index.tsx",
    "dev:pr": "cd apps/public-register && bun dev",
    "dev:cal": "cd apps/calendar && bun dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui": "bun --filter @repo/ui ui"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "prettier": "^3.3.3",
    "turbo": "^2.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.30",
  "dependencies": {
    "@tanstack/react-form": "^0.40.1",
    "@tanstack/react-table": "^8.20.5",
    "@tanstack/valibot-form-adapter": "^0.40.1",
    "date-fns": "^4.1.0",
    "react-router": "^7.0.2"
  }
}
